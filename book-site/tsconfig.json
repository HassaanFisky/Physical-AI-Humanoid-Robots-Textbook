{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "src/**/*",
    "api/**/*",
    "backend/**/*",
    "scripts/**/*",
    "mcp-server/**/*"
  ],
  "exclude": ["node_modules", "build"]
}
